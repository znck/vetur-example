{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "es2015", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "resolveJsonModule": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"],
  "include": ["*.d.ts", "src/**/*"],
  "typeAcquisition": {
    "enable": true
  }
}
